namespace chess.standard.game;

enum PieceType : byte {
  PAWN = 0,
  ROOK = 1,
  KNIGHT = 2,
  BISHOP = 3,
  QUEEN = 4,
  KING = 5,
}

enum PieceColor : byte {
  WHITE = 0,
  BLACK = 1,
}

struct Position {
  x: byte;
  y: byte;
}

table Piece {
  id: uint;
  piece_type: PieceType;
  color: PieceColor;
  position: Position;
}

table BoardState {
  pieces: [Piece];
}

table Move {
  piece_id: uint;
  from: Position;
  to: Position;
}

root_type BoardState;

